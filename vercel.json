{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/ref/:slug*",
      "destination": "/"
    },
    {
      "source": "/admin/(.*)",
      "destination": "https://app.clubdedesarrollohumano.com/admin/$1"
    }
  ],
  "redirects": [
    {
      "source": "/admin",
      "destination": "https://app.clubdedesarrollohumano.com/admin",
      "permanent": false
    }
  ]
}
